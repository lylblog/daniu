<scroll-view scroll-y="true" style="height:{{scrollHeight}}px">
  <view class="list">
    <block wx:for="{{adList}}" wx:key="id">
      <view class="list-item" data-bid="{{item.id}}" bindtap="toDetailPage">
        <view class="cover">
          <image class="cover-img" src="./images/1.png"></image>
        </view>
        <view class="content">
          <text class="title">{{item.title}}</text>
          <text class="desc">{{item.created_time == '0.0' ? 'None' : item.created_time}}/
            <block wx:for="{{item.status}}" wx:for-item="it" wx:key="*this">{{it}}/</block>
          </text>
          <text class="pubdate">{{item.tags}}</text>
        </view>
      </view>
    </block>
  </view>
</scroll-view>
