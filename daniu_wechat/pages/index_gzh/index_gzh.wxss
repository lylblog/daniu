.twoImg {
  width: 90%;
  height: 150rpx;
  padding: 3%;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  border-radius: 17px;
}


.desc-two-img {
  width: 55%;
  border-radius: 10px;
  margin: 2px;
}
.list-item {
  background-color: rgb(251, 251, 251);
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 25rpx 10rpx;
  box-shadow: 2px 2px 4px 4px #92daaf;
  /* border-radius: 10%; */
  border-radius: 10px; /*  圆角 */
  /* border: 3rpx solid #11100f; */
}

.cover-img {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 20rpx;
  border-radius: 10px;
  display: inline-block;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 5px;
  transition: 0.3s;
}

.content {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  align-items: left;
}

