 }

 .shortWords {
  width: 85%;
  height: 30px;
  border:1px solid #ccc;
  border-radius: 40px;
  margin: 0 auto;
}
.swiperClass {
  margin: 0;
  margin-top: -75px;
  line-height: 50px;
}
.wordSwiper {
  font-size: 34rpx;
  text-align: center;
  line-height: 30px;
  width: 94%;
  margin: 0 auto;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
} 



.var {
  background: #EEF8FF;
  background-size: cover;
