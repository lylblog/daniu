  padding: 0rpx 0;
  height: 130rpx;
}
.container-blog-view {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 


.slide-image {
  width: 100%;
  height: 90%;
  border-radius: 10px;
  position: relative;
}

image.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}

.read-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 14px;
  color: #aaa;
}



